[user]
	name = Anton Maminov
	email = anton.linux@gmail.com
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
[color]
	ui = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	fix = commit --amend --no-edit
	rrb = "!git reset --hard origin/$(git branch --show-current)"
	psup = "!git push --set-upstream origin $(git_current_branch)"
	default = !git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'
	who = shortlog -ns --
	current = branch --show-current
[pull]
	rebase = false
[init]
  defaultBranch = main
[credential "https://github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
